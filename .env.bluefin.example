# Bluefin Exchange Configuration Example
# Copy this to .env and fill in your values for Bluefin trading

# Exchange Selection
EXCHANGE__EXCHANGE_TYPE=bluefin
EXCHANGE_TYPE=bluefin  # For Docker build arg

# Bluefin Configuration
EXCHANGE__BLUEFIN_PRIVATE_KEY=your_sui_wallet_private_key_here
EXCHANGE__BLUEFIN_NETWORK=mainnet  # or testnet for testing
EXCHANGE__BLUEFIN_RPC_URL=  # Optional: custom Sui RPC endpoint

# Trading Configuration
TRADING__SYMBOL=ETH-USD  # Will be converted to ETH-PERP
TRADING__LEVERAGE=5
TRADING__MAX_FUTURES_LEVERAGE=10
TRADING__ENABLE_FUTURES=true  # Always true for Bluefin

# LLM Configuration (same as Coinbase)
LLM__OPENAI_API_KEY=your_openai_api_key_here
LLM__PROVIDER=openai
LLM__MODEL_NAME=gpt-4

# System Configuration
SYSTEM__DRY_RUN=true  # Set to false for live trading
SYSTEM__ENVIRONMENT=production
SYSTEM__LOG_LEVEL=INFO

# Risk Management
RISK__MAX_DAILY_LOSS_PCT=5.0
RISK__DEFAULT_STOP_LOSS_PCT=2.0
RISK__DEFAULT_TAKE_PROFIT_PCT=4.0

# Optional: MCP Memory System
MCP_ENABLED=false
MEM0_API_KEY=

# Optional: OmniSearch Market Intelligence
OMNISEARCH__ENABLED=false
OMNISEARCH__API_KEY=

# Docker-specific
DRY_RUN=true  # For docker-compose command override
VERSION=0.1.0
BUILD_DATE=
VCS_REF=