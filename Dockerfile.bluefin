# AI Trading Bot Dockerfile - Bluefin-specific build
# Uses Python 3.12 with proper dependency management for Bluefin SDK

# Build stage
FROM python:3.12-slim AS builder

# Build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=0.1.0
ARG POETRY_VERSION=1.8.2

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
ENV POETRY_HOME="/opt/poetry" \
    POETRY_VENV_IN_PROJECT=true \
    POETRY_NO_INTERACTION=1 \
    POETRY_CACHE_DIR=/tmp/poetry_cache
RUN curl -sSL https://install.python-poetry.org | python3 - --version=${POETRY_VERSION}
ENV PATH="$POETRY_HOME/bin:$PATH"

# Set work directory
WORKDIR /app

# Copy poetry files
COPY pyproject.toml poetry.lock* ./

# Keep Python 3.12 as specified in pyproject.toml
# RUN sed -i 's/python = "^3.12"/python = "^3.11"/' pyproject.toml

# Install main dependencies with Poetry (excluding bluefin)
RUN poetry config virtualenvs.in-project true \
    && poetry install --only=main --no-root \
    && rm -rf $POETRY_CACHE_DIR

# Production stage
FROM python:3.12-slim AS production

# Copy build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=0.1.0

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/app/.venv/bin:$PATH" \
    PYTHONPATH="/app" \
    APP_VERSION=${VERSION} \
    EXCHANGE__EXCHANGE_TYPE=bluefin

# Install runtime dependencies including build tools for Bluefin SDK
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    python3-dev \
    autoconf \
    automake \
    libtool \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd --gid 1000 botuser \
    && useradd --uid 1000 --gid 1000 --create-home --shell /bin/bash botuser

# Set work directory
WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder --chown=botuser:botuser /app/.venv /app/.venv

# Install Bluefin dependencies - try newer version compatible with Python 3.12
RUN /app/.venv/bin/pip uninstall -y socketio python-socketio || true \
    && /app/.venv/bin/pip install --no-cache-dir \
    "python-socketio[asyncio_client]==5.8.0" \
    websockets==12.0 \
    aiohttp==3.9.0 \
    && /app/.venv/bin/pip install --no-cache-dir --no-build-isolation \
    bluefin-v2-client==4.2.13 \
    && apt-get purge -y --auto-remove \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    python3-dev \
    autoconf \
    automake \
    libtool \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy application code
COPY --chown=botuser:botuser bot/ ./bot/
COPY --chown=botuser:botuser pyproject.toml ./

# Create required directories
RUN mkdir -p /app/config /app/logs /app/data /app/prompts \
    && chown -R botuser:botuser /app

# Copy prompt files
COPY --chown=botuser:botuser prompts/*.txt ./prompts/

# Copy health check script
COPY --chown=botuser:botuser healthcheck.sh /app/healthcheck.sh
RUN chmod +x /app/healthcheck.sh

# Switch to non-root user
USER botuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD ["/app/healthcheck.sh"]

# Expose port for health checks and monitoring
EXPOSE 8080

# Default command - starts in safe dry-run mode
CMD ["python", "-m", "bot.main", "live", "--dry-run"]

# Labels
LABEL org.opencontainers.image.title="AI Trading Bot - Bluefin Edition" \
      org.opencontainers.image.description="Decentralized perpetual futures trading bot for Bluefin on Sui" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.vendor="AI Trading Bot" \
      org.opencontainers.image.exchange="bluefin" \
      org.opencontainers.image.python="3.12" \
      maintainer="ai-trading-bot"