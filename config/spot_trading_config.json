{
  "name": "spot_trading_optimized",
  "description": "Optimized configuration for Coinbase spot trading",
  "trading": {
    "symbol": "ETH-USD",
    "interval": "15s",
    "enable_futures": false,
    "max_size_pct": 25.0,
    "leverage": 1,
    "max_futures_leverage": 1,
    "futures_contract_size": 0,
    "futures_account_type": "CFM",
    "auto_cash_transfer": false,
    "max_intraday_contracts": 0,
    "intraday_margin_multiplier": 1.0,
    "overnight_margin_multiplier": 1.0,
    "fixed_contract_quantity": 0,
    "use_fifo_accounting": true,
    "order_timeout_seconds": 30,
    "slippage_tolerance_pct": 0.2,
    "min_profit_pct": 0.5,
    "spot_maker_fee_rate": 0.006,
    "spot_taker_fee_rate": 0.012,
    "maker_fee_rate": 0.006,
    "taker_fee_rate": 0.012,
    "futures_fee_rate": 0.0015,
    "min_trading_interval_seconds": 15,
    "require_24h_data_before_trading": false,
    "min_candles_for_trading": 240
