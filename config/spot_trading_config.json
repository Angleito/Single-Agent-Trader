  "llm": {
    "provider": "openai",
    "model_name": "gpt-4o",
    "temperature": 0.1,
    "max_tokens": 4000,
    "top_p": 1.0,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "request_timeout": 30,
    "max_retries": 3,
    "retry_delay": 1.0,
    "retry_exponential_base": 2.0,
    "enable_caching": true,
    "cache_ttl_seconds": 300,
    "enable_completion_logging": true,
    "completion_log_level": "INFO",
    "completion_log_file": "logs/llm_completions.log",
    "log_prompt_preview_length": 500,
    "log_response_preview_length": 1000,
    "enable_performance_tracking": true,
    "enable_langchain_callbacks": true,
    "log_market_context": true,
    "enable_token_usage_tracking": true,
    "performance_log_interval": 10
  },
  "risk": {
    "max_daily_loss_pct": 5.0,
    "max_weekly_loss_pct": 15.0,
    "max_monthly_loss_pct": 30.0,
    "max_concurrent_trades": 1,
    "max_position_hold_hours": 4,
    "default_stop_loss_pct": 0.5,
    "default_take_profit_pct": 0.8,
    "min_account_balance": 100,
    "emergency_stop_loss_pct": 10.0
  },
  "data": {
    "candle_limit": 1000,
    "real_time_updates": true,
    "data_cache_ttl_seconds": 1,
    "indicator_warmup": 100,
    "cipher_a_ema_length": 7,
    "cipher_b_vwap_length": 10,
    "enable_cipher_b_filter": true,
    "cipher_b_wave_bullish_threshold": 0.0,
    "cipher_b_wave_bearish_threshold": 0.0,
    "cipher_b_money_flow_bullish_threshold": 50.0,
    "cipher_b_money_flow_bearish_threshold": 50.0,
    "data_storage_path": "data",
    "keep_historical_days": 30
  },
  "dominance": {
    "track_stablecoin_dominance": true,
    "dominance_impact_threshold": 15.0,
    "track_symbols": ["USDT", "USDC"],
    "min_dominance_change_pct": 0.5,
    "check_interval_seconds": 300,
    "trend_window_hours": 24,
    "alert_on_significant_change": true,
    "significant_change_threshold": 5.0
  },
  "mcp": {
    "enabled": false,
    "server_url": "http://localhost:8765",
    "max_memories_per_query": 10,
    "similarity_threshold": 0.7,
    "memory_retention_days": 90,
    "enable_pattern_learning": true,
    "learning_rate": 0.1,
    "min_samples_for_pattern": 5,
    "confidence_decay_rate": 0.95,
    "track_trade_lifecycle": true,
    "store_market_snapshots": true,
    "reflection_delay_minutes": 30
  },
  "system": {
    "dry_run": true,
    "environment": "development",
    "log_level": "INFO",
    "log_file": "logs/trading.log",
    "enable_file_logging": true,
    "max_log_file_size_mb": 100,
    "log_retention_days": 30,
    "enable_debug_mode": false,
    "enable_monitoring": true,
    "enable_metrics": true,
    "metrics_export_interval": 60,
    "health_check_interval": 300,
    "shutdown_timeout": 30,
    "enable_api_auth": true,
    "enable_websocket_publishing": false,
    "websocket_dashboard_url": "ws://localhost:8000/ws",
    "websocket_publish_interval": 1.0,
    "websocket_max_retries": 3,
    "websocket_retry_delay": 5,
    "websocket_timeout": 10,
    "websocket_queue_size": 100
