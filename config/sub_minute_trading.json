{
  "trading": {
    "symbol": "BTC-USD",
    "interval": "15s",
    "leverage": 5,
    "max_size_pct": 15.0,
    "order_timeout_seconds": 15,
    "slippage_tolerance_pct": 0.2,
    "min_profit_pct": 0.3,
    "min_trading_interval_seconds": 15
  },
  "exchange": {
    "exchange_type": "coinbase",
    "use_trade_aggregation": true,
    "cb_sandbox": true,
    "api_timeout": 5,
    "rate_limit_requests": 20,
    "websocket_reconnect_attempts": 10,
    "websocket_timeout": 15
  },
  "risk": {
    "max_daily_loss_pct": 3.0,
    "max_weekly_loss_pct": 12.0,
    "max_monthly_loss_pct": 30.0,
    "max_concurrent_trades": 2,
    "max_position_hold_hours": 2,
    "default_stop_loss_pct": 0.8,
    "default_take_profit_pct": 1.6,
    "min_account_balance": 100,
    "emergency_stop_loss_pct": 2.5
  },
  "llm": {
    "provider": "openai",
    "model_name": "gpt-4o-mini",
    "temperature": 0.05,
    "max_tokens": 3000,
    "request_timeout": 20,
    "max_retries": 5,
    "retry_delay": 0.5
  },
  "data": {
    "candle_limit": 500,
    "real_time_updates": true,
    "data_cache_ttl_seconds": 15,
    "indicator_warmup": 200,
    "cipher_a_ema_length": 13,
    "cipher_b_vwap_length": 14,
    "enable_cipher_b_filter": true,
    "cipher_b_wave_bullish_threshold": 0.0,
    "cipher_b_wave_bearish_threshold": 0.0,
    "cipher_b_money_flow_bullish_threshold": 55.0,
    "cipher_b_money_flow_bearish_threshold": 45.0,
    "data_storage_path": "data",
    "keep_historical_days": 3
  },
  "system": {
    "dry_run": true,
    "environment": "development",
    "log_level": "INFO",
    "enable_performance_monitoring": true,
    "config_validation": true,
    "graceful_shutdown_timeout": 10
  },
  "monitoring": {
    "enabled": true,
    "alert_on_errors": true,
    "alert_on_missed_opportunities": false,
    "performance_tracking": true,
    "balance_monitoring": true,
    "error_rate_threshold": 0.05,
    "latency_threshold_ms": 200
  },
  "paper_trading": {
    "enabled": true,
    "starting_balance": 10000.0,
    "track_slippage": true,
    "realistic_fills": true,
    "commission_rate": 0.001,
    "log_all_decisions": true
  }
}