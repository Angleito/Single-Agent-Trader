{
  "system": {
    "environment": "vps-production",
    "dry_run": true,
    "enable_websocket_publishing": true,
    "websocket_publish_interval": 2.0,
    "websocket_max_retries": 10,
    "websocket_retry_delay": 10,
    "websocket_timeout": 60,
    "performance_monitoring": true,
    "health_check_interval": 30,
    "geographic_region": "US",
    "vps_deployment": true,
    "backup_enabled": true,
    "backup_interval": 3600,
    "alert_enabled": true,
    "metrics_collection": true
  },
  "exchange": {
    "exchange_type": "bluefin",
    "bluefin_network": "mainnet",
    "connection_timeout": 30,
    "read_timeout": 60,
    "max_retries": 5,
    "retry_backoff": 2,
    "rate_limit": 50,
    "enable_proxy": false,
    "proxy_host": "",
    "proxy_port": 0,
    "proxy_auth": false,
    "fail_on_regional_restriction": false,
    "regional_bypass_enabled": true
  },
  "trading": {
    "symbol": "SUI-PERP",
    "leverage": 5,
    "position_check_interval": 10,
    "market_data_interval": 5,
    "health_check_interval": 30,
    "max_position_size": 0.25,
    "stop_loss_percentage": 0.02,
    "take_profit_percentage": 0.04,
    "emergency_stop_enabled": true,
    "balance_check_interval": 30,
    "balance_threshold_warning": 100.0,
    "balance_threshold_critical": 50.0
  },
  "risk": {
    "max_drawdown": 0.15,
    "max_daily_loss": 0.05,
    "max_open_positions": 1,
    "position_size_multiplier": 0.25,
    "emergency_stop_enabled": true,
    "risk_monitoring_enabled": true,
    "risk_alert_threshold": 0.1,
    "auto_reduce_on_loss": true,
    "max_consecutive_losses": 3
  },
  "logging": {
    "level": "INFO",
    "enable_file_logging": true,
    "log_rotation": true,
    "max_log_size": "100MB",
    "max_log_files": 10,
    "structured_logging": true,
    "enable_remote_logging": false,
    "remote_log_endpoint": "",
    "log_retention_days": 30,
    "enable_audit_logging": true
  },
  "monitoring": {
    "enabled": true,
    "metrics_interval": 60,
    "health_check_interval": 30,
    "performance_tracking": true,
    "alert_enabled": true,
    "alert_webhook_url": "",
    "alert_email": "",
    "dashboard_enabled": true,
    "dashboard_port": 8000,
    "metrics_retention_days": 7
  },
  "network": {
    "connection_timeout": 30,
    "read_timeout": 60,
    "max_retries": 5,
    "retry_backoff": 2,
    "dns_servers": ["8.8.8.8", "1.1.1.1"],
    "enable_ipv6": false,
    "tcp_keepalive": true,
    "tcp_keepalive_idle": 600,
    "tcp_keepalive_interval": 60,
    "tcp_keepalive_probes": 3
  },
  "security": {
    "enable_api_key_rotation": true,
    "api_key_rotation_days": 30,
    "enable_secure_headers": true,
    "enable_rate_limiting": true,
    "rate_limit_per_minute": 100,
    "enable_audit_logging": true,
    "max_login_attempts": 5,
    "login_lockout_duration": 300,
    "enable_2fa": false
  },
  "backup": {
    "enabled": true,
    "backup_interval": 3600,
    "backup_retention_days": 7,
    "backup_location": "/var/backups/vps-trading-bot",
    "backup_encryption": false,
    "backup_compression": true,
    "backup_verification": true,
    "backup_alerts": true
  },
  "recovery": {
    "auto_recovery_enabled": true,
    "max_recovery_attempts": 3,
    "recovery_cooldown": 300,
    "recovery_strategy": "gradual",
    "fallback_mode": "safe",
    "recovery_alerts": true,
    "recovery_validation": true
  },
  "performance": {
    "enable_caching": true,
    "cache_ttl": 300,
    "enable_compression": true,
    "connection_pooling": true,
    "max_connections": 50,
    "connection_timeout": 30,
    "enable_metrics": true,
    "metrics_sampling_rate": 0.1
  }
}
