{
  "testEnvironment": {
    "name": "AI Trading Bot Dashboard Integration Tests",
    "version": "1.0.0",
    "description": "Comprehensive integration tests for WebSocket connections, API endpoints, and UI components in Docker environment"
  },
  
  "services": {
    "backend": {
      "name": "dashboard-backend",
      "url": "http://localhost:8000",
      "healthEndpoint": "/health",
      "timeout": 10000,
      "requiredEndpoints": [
        "/",
        "/health",
        "/status",
        "/trading-data",
        "/logs",
        "/llm/status",
        "/llm/metrics",
        "/llm/activity",
        "/llm/decisions",
        "/llm/alerts",
        "/udf/config",
        "/tradingview/symbols"
      ]
    },
    "frontend": {
      "name": "dashboard-frontend",
      "url": "http://localhost:3000",
      "healthEndpoint": "/",
      "timeout": 10000,
      "testPaths": [
        "/",
        "/test/ui-test.html"
      ]
    }
  },
  
  "websocket": {
    "url": "ws://localhost:8000/ws",
    "connectionTimeout": 10000,
    "messageTimeout": 5000,
    "expectedMessageTypes": [
      "echo",
      "llm_decision", 
      "llm_event",
      "tradingview_update",
      "docker-logs"
    ],
    "testMessages": [
      {
        "type": "ping",
        "message": "WebSocket integration test ping"
      },
      {
        "type": "ui_test",
        "message": "UI integration test message"
      }
    ]
  },
  
  "docker": {
    "composeFile": "docker-compose.yml",
    "requiredContainers": [
      "dashboard-backend",
      "dashboard-frontend"
    ],
    "requiredNetworks": [
      "dashboard-network"
    ],
    "requiredVolumes": [
      "dashboard-logs",
      "dashboard-data"
    ],
    "resourceLimits": {
      "maxCpuPercent": 80,
      "maxMemoryUsage": "1GB"
    }
  },
  
  "testSuites": {
    "websocket": {
      "enabled": true,
      "tests": [
        "connection",
        "echoPingPong",
        "realTimeDataFlow",
        "connectionStability",
        "errorHandling",
        "mockDataInjection"
      ],
      "timeout": 30000
    },
    "api": {
      "enabled": true,
      "tests": [
        "healthCheck",
        "rootEndpoint",
        "statusEndpoint", 
        "tradingDataEndpoint",
        "logsEndpoint",
        "llmEndpoints",
        "tradingViewEndpoints",
        "errorHandling",
        "responseValidation",
        "corsHeaders",
        "performance"
      ],
      "timeout": 30000
    },
    "ui": {
      "enabled": true,
      "tests": [
        "componentRendering",
        "dataBinding",
        "eventHandling",
        "chartIntegration",
        "responsiveDesign"
      ],
      "timeout": 30000
    },
    "docker": {
      "enabled": true,
      "tests": [
        "dockerInstallation",
        "composeFileExists",
        "containersRunning",
        "networksCreated",
        "volumesCreated",
        "servicesHealthy",
        "interServiceComm",
        "resourceUsage",
        "logsAccessible"
      ],
      "timeout": 60000
    },
    "integration": {
      "enabled": true,
      "tests": [
        "endToEndDataFlow",
        "realTimeUpdates",
        "errorRecovery",
        "loadTesting",
        "securityBasics"
      ],
      "timeout": 60000
    }
  },
  
  "mockData": {
    "symbols": ["BTC-USD", "ETH-USD", "SOL-USD", "AVAX-USD"],
    "timeframes": ["1m", "5m", "15m", "1h", "4h", "1d"],
    "marketConditions": ["bull", "bear", "sideways", "volatile"],
    "llmActions": ["LONG", "SHORT", "CLOSE", "HOLD"],
    "basePrices": {
      "BTC-USD": 45000,
      "ETH-USD": 2800,
      "SOL-USD": 95,
      "AVAX-USD": 35
    },
    "testDataCount": 100,
    "sessionDuration": 3600000
  },
  
  "reporting": {
    "outputDirectory": "./test-reports",
    "formats": ["json", "html", "console"],
    "includeScreenshots": false,
    "includeLogs": true,
    "detailedMetrics": true
  },
  
  "thresholds": {
    "minimumPassRate": 80,
    "maxResponseTime": 5000,
    "maxLoadTime": 10000,
    "criticalTests": [
      "websocket.connection",
      "api.healthCheck",
      "docker.containersRunning",
      "docker.servicesHealthy"
    ]
  },
  
  "environments": {
    "development": {
      "backend_url": "http://localhost:8000",
      "frontend_url": "http://localhost:3000",
      "websocket_url": "ws://localhost:8000/ws"
    },
    "production": {
      "backend_url": "http://dashboard-backend:8000",
      "frontend_url": "http://localhost:80",
      "websocket_url": "ws://dashboard-backend:8000/ws",
      "nginx_url": "http://localhost:8080"
    }
  },
  
  "retryPolicy": {
    "maxRetries": 3,
    "retryDelay": 1000,
    "exponentialBackoff": true,
    "retryableErrors": [
      "ECONNREFUSED",
      "TIMEOUT",
      "ENOTFOUND"
    ]
  },
  
  "monitoring": {
    "healthCheckInterval": 30000,
    "performanceMetrics": true,
    "resourceMonitoring": true,
    "logCollection": true
  }
}