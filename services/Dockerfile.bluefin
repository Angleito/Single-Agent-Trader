FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Bluefin SDK and dependencies
RUN pip install --upgrade pip && \
    pip install \
    bluefin-v2-client \
    aiohttp \
    python-dotenv

# Copy service code
COPY bluefin_sdk_service.py /app/

# Expose port
EXPOSE 8080

# Set environment variables with defaults
ENV BLUEFIN_SERVICE_RATE_LIMIT=100
ENV HOST=0.0.0.0
ENV PORT=8080

# Run the service
CMD ["python", "bluefin_sdk_service.py"]